<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <main>
    <h1><%= title %></h1>

    <!-- Flash Messages -->
    <% if (messages && messages.notice) { %>
      <div class="flash-message">
        <p><%= messages.notice %></p>
      </div>
    <% } %>

    <!-- Errors -->
    <% if (errors) { %>
      <ul class="errors">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }); %>
      </ul>
    <% } %>

    <!-- Display User Information -->
    <% if (loggedIn) { %>
      <h2>Welcome, <%= account_firstname %></h2>

      <!-- Update Account Info (Visible to Everyone) -->
      <p><a href="/account/update/<%= account_id %>">Update Account Information</a></p>

      <!-- Show Inventory Management for Admin/Employee Only -->
      <% if (account_type === "Admin" || account_type === "Employee") { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/">Manage Inventory</a></p>
      <% } %>

      <!-- Logout Button -->
      <form action="/account/logout" method="POST">
        <button type="submit">Logout</button>
      </form>
    <% } else { %>
      <p>Please <a href="/account/login">log in</a> to access your account.</p>
    <% } %>

  </main>
</body>
</html>
