<!-- views/account/login.ejs -->

<%- include('../partials/head') %> 

<body>

  <!-- Flash message -->
  <%- messages() %>

  <!-- Login Form -->
  <div class="login-container">
    <h1><%= title %></h1> <!-- Title from controller -->
    
    <form id="loginForm" action="/account/login" method="post">
      <label for="account_email">Username:</label>
      <input type="email" id="account_email" name="account_email" required>
      
      <label for="account_password">Password:</label>
      <input type="password" id="account_password" name="account_password" required>
      
      <button type="submit">Login</button>
    </form>

    <!-- Link to Registration Page -->
    <p>Don't have an account? <a href="/account/register">Sign up here</a></p>
  </div>

</body>
