<% if (messages && messages.notice) { %>
  <div class="flash-message">
    <p><%= messages.notice %></p>
  </div>
<% } %>

<h2>Welcome to CSE Motors!</h2>

<!-- Hero Section -->
<section class="hero">
  <img src="/images/vehicles/delorean.jpg" alt="DMC Delorean">
  <div class="hero-text">
    <span>DMC Delorean</span>
    <span>3 Cup holders!</span>
    <span>Superman Doors</span>
    <span>Fuzzy dice!</span>
    <a href="/inv/detail/25" class="button-blue">Own Today</a>
  </div>
</section>

<!-- Main Content -->
<div class="content">
  <!-- Gallery Section -->
  <section id="upgrades" class="gallery">
    <h2>Upgrades</h2>
    <div class="caption-image">
      <img src="/images/upgrades/flux-cap.png" alt="Flux Capacitor">
      <a href="#">Flux Capacitor</a>
    </div>
    <div class="caption-image">
      <img src="/images/upgrades/flame.jpg" alt="Flame Decals">
      <a href="#">Flame Decals</a>
    </div>
    <div class="caption-image">
      <img src="/images/upgrades/bumper_sticker.jpg" alt="Bumper Stickers">
      <a href="#">Bumper Stickers</a>
    </div>
    <div class="caption-image">
      <img src="/images/upgrades/hub-cap.jpg" alt="Hub Caps">
      <a href="#">Hub Caps</a>
    </div>
  </section>

  <!-- Reviews Section -->
  <section id="reviews">
    <h2>Reviews</h2>
    <ul>
      <li>"Great service, would recommend!"</li>
      <li>"Gallery is a lot better than last week!"</li>
      <li>"Very pleased with the overall experience."</li>
      <li>"Will definitely come back for more!"</li>
    </ul>
  </section>
</div>

