<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <main>
    <h1><%= title %></h1>

    <!-- Flash Messages -->
    <% if (flash && flash.length > 0) { %>
      <div class="flash-message">
        <% flash.forEach(function(message) { %>
          <p><%= message %></p>
        <% }); %>
      </div>
    <% } %>

    <!-- Error Messages -->
    <% if (errors && errors.length) { %>
      <ul class="errors">
        <% errors.forEach(function(error) { %>
          <li><%= error %></li>
        <% }); %>
      </ul>
    <% } %>

    <!-- Edit Inventory Form -->
    <form method="POST" action="/inv/update" id="updateForm" class="vehicle-form">
      <input type="hidden" name="inv_id" value="<%= inv_id %>">

      <label for="classification_id">Classification:</label>
      <%- classificationList %>

      <label for="inv_make">Make:</label>
      <input type="text" name="inv_make" id="inv_make" value="<%= inv_make %>" required>

      <label for="inv_model">Model:</label>
      <input type="text" name="inv_model" id="inv_model" value="<%= inv_model %>" required>

      <label for="inv_year">Year:</label>
      <input type="number" name="inv_year" id="inv_year" value="<%= inv_year %>" required min="1900" max="<%= new Date().getFullYear() + 1 %>">

      <label for="inv_price">Price:</label>
      <input type="number" name="inv_price" id="inv_price" value="<%= inv_price %>" required min="0" step="0.01">

      <label for="inv_miles">Miles:</label>
      <input type="number" name="inv_miles" id="inv_miles" value="<%= inv_miles %>" required min="0">

      <label for="inv_color">Color:</label>
      <input type="text" name="inv_color" id="inv_color" value="<%= inv_color %>" required>

      <label for="inv_image">Image Path:</label>
      <input type="text" name="inv_image" id="inv_image" value="<%= inv_image %>" required>

      <label for="inv_thumbnail">Thumbnail Path:</label>
      <input type="text" name="inv_thumbnail" id="inv_thumbnail" value="<%= inv_thumbnail %>" required>

      <label for="inv_description">Description:</label>
      <textarea name="inv_description" id="inv_description" required><%= inv_description %></textarea>

      <!-- Initially disabled button -->
      <button type="submit" id="updateButton" disabled>Update Inventory</button>
    </form>
  </main>

  <!-- Include JavaScript to Enable the Update Button -->
  <script src="/js/inv-update.js"></script>
</body>
</html>
