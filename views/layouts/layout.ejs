<!DOCTYPE html> 
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'CSE Motors' %></title>
    <link rel="stylesheet" href="/css/styles.css"> 
  </head>
  <body>
    <div id="wrapper">
      <%- include('../partials/header') %>
      <% if (locals.loggedIn) { %>
        <div class="messages-bar">
          <a href="/messages/inbox" class="nav-button message-button">
            Messages
            <% if (typeof locals.unreadMessageCount === 'number' && locals.unreadMessageCount > 0) { %>
              <span class="badge"><%= locals.unreadMessageCount %></span>
            <% } %>
          </a>
        </div>
      <% } %>
      <%- include('../partials/navigation') %>
      <main>
        <% if (messages && messages.success && messages.success.length > 0) { %>
          <div class="flash-success"><%= messages.success[0] %></div>
        <% } %>
        <% if (messages && messages.error && messages.error.length > 0) { %>
          <div class="flash-error"><%= messages.error[0] %></div>
        <% } %>
        <%- body %>
      </main>
      <%- include('../partials/footer') %>
    </div>
  </body>
</html>