<!DOCTYPE html> 
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css"> 
  </head>
  <body>
    <div id="wrapper">
      <%- include('../partials/header') %>
      <% console.log("After header, loggedIn:", locals.loggedIn) %>
      <% if (locals.loggedIn) { %>
        <div class="messages-bar">
          <a href="/messages/inbox" class="nav-button message-button">
            Messages
            <% console.log("Unread count:", locals.unreadMessageCount) %>
            <% if (locals.unreadMessageCount && locals.unreadMessageCount > 0) { %>
              <span class="badge"><%= locals.unreadMessageCount %></span>
            <% } %>
          </a>
        </div>
      <% } %>
      <%- include('../partials/navigation') %>
      <main>
        <% if (messages.success) { %>
          <div class="flash success"><%= messages.success %></div>
        <% } %>
        <% if (messages.error) { %>
          <div class="flash error"><%= messages.error %></div>
        <% } %>
        <%- body %>
      </main>
      <%- include('../partials/footer') %>
    </div>
  </body>
</html>