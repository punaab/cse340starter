<!DOCTYPE html> 
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/styles.css"> 
  </head>
  <body>
    <div id="wrapper">
      <%- include('../partials/header') %>

      <% if (locals.loggedIn) { %>
        <div class="messages-bar">
          <a href="/messages/inbox" class="nav-button message-button">
            Messages
            <% if (locals.unreadCount && locals.unreadCount > 0) { %>
              <span class="badge"><%= locals.unreadCount %></span>
            <% } %>
          </a>
        </div>
      <% } %>

      <%- include('../partials/navigation') %>

      <main>
        <%- body %>
      </main>

      <%- include('../partials/footer') %>
    </div>
  </body>
</html>


