<%- include("../partials/header", { title: "Compose Message" }) %>
<h1>âž• Compose Message</h1>
<form action="/messages/send" method="POST">
  <label for="recipient">To:</label>
  <select name="recipient" id="recipient" required>
    <option value="">Select a user</option>
    <% users.forEach(user => { %>
      <option value="<%= user.account_id %>" <%= recipient == user.account_id ? "selected" : "" %>>
        <%= user.account_firstname %> <%= user.account_lastname %>
      </option>
    <% }) %>
  </select>
  <label for="subject">Subject:</label>
  <input type="text" id="subject" name="subject" value="<%= subject || '' %>" required>
  <label for="body">Message:</label>
  <textarea id="body" name="body" rows="6" required><%= body || '' %></textarea>
  <% if (error) { %>
    <p class="error"><%= error %></p>
  <% } %>
  <button type="submit">Send</button>
</form>
<%- include("../partials/footer") %>